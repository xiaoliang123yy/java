package SubjectEnrolment.copy;


public class Subject {
	public String id;
	public String name;
	public int year;
	public Student list[];
	public int count;
	
	public Subject(){
		
	}
	
	public Subject( String name, String id,int year, int max){
		list = new Student[max];
		this.name = name;
		count = 0;
		this.id = id;
		this.year = year;
	}

	public boolean add(Student student){
		if(list.length <= count )
			return false;
		if(student == null)
			return false;
		list[count] = student;
		count++;
		return true;
	}
	
	public boolean remove(int index){
		if(index > count || index < 0)
			return false;
		else
			list[index] = null;
		for(int i = index;i < count; i++){
			list[i] = list[i+1];
		}
		return true;
	}

	public int indexOf(String id){
		for(int i = 0; i <= count && list[i] != null; i++){
			if(list[i].getId().equals(id))
				return i;
		}
			return -1;
	}
	
	
	
	

	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getYear() {
		return year;
	}

	public void setYear(int year) {
		this.year = year;
	}

	public Student[] getList() {
		return list;
	}

	public void setList(Student[] list) {
		this.list = list;
	}

	public int getCount() {
		return count;
	}

	public void setCount(int count) {
		this.count = count;
	}

	public Student get(int index){
		return list[index];
	}
	
	public int size(){
		return count;
	}

	public String toString() {
		return "Sbuject [name=" + name + "]";
	}
	
	
}
